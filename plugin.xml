<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-plugin-edgesafe" version="1.0.0"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">

  <name>Edge Safe</name>
  <description>Applies Android WindowInsets to Cordova WebView for edge-to-edge safety.</description>
  <license>MIT</license>
  <keywords>cordova, android, windowinsets, edge-to-edge, safe-area</keywords>

  <engines>
    <engine name="cordova" version=">=11.0.0" />
    <engine name="cordova-android" version=">=12.0.0" />
  </engines>

  <!-- JS bridge -->
  <js-module src="www/edge-safe.js" name="EdgeSafe">
    <clobbers target="cordova.plugins.edgeSafe" />
  </js-module>

  <platform name="android">
    <!-- Add AndroidX Core for WindowCompat/ViewCompat -->
    <framework src="androidx.core:core:1.13.1" />

    <!-- Register the native class with Cordova -->
    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="EdgeSafe">
        <param name="android-package" value="com.weevi.edgesafe.EdgeSafe" />
      </feature>
    </config-file>

    <!-- Ensure keyboard resizes WebView (not overlay) -->
    <edit-config file="app/src/main/AndroidManifest.xml"
                 target="/manifest/application/activity"
                 mode="merge">
      <activity android:windowSoftInputMode="adjustResize|stateHidden" />
    </edit-config>

    <!-- Optional plugin preferences (override in app config.xml) -->
    <preference name="EdgeSafeApplyPadding" default="true" />
    <preference name="EdgeSafePadTop" default="true" />
    <preference name="EdgeSafePadBottom" default="true" />
    <preference name="EdgeSafePadSides" default="true" />
    <preference name="EdgeSafeTransparentBars" default="true" />
    <preference name="EdgeSafeLightStatusBarIcons" default="true" />
    <preference name="EdgeSafeLightNavBarIcons" default="true" />

    <source-file src="src/android/EdgeSafe.java" target-dir="src/com/weevi/edgesafe" />
  </platform>
</plugin>
